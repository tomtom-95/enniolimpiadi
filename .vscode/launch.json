{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug C Program",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/build/${fileBasenameNoExtension}", // Replace with your compiled program's path
        "args": ["0"], // Add any command-line arguments for your program
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false, // Set to true if you want an external console
        "MIMode": "lldb", // For Linux/macOS; use "lldb" on macOS if needed
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build" // Reference a task defined in tasks.json for building your program
      }
    ]
  }
  